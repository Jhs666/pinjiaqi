button {
  border-radius: 0;
}

.topbg {
  width: 94%;
  overflow: hidden;
  padding: 0 3%;
  background: #06b3ed;
}

.topbg .top {
  width: 94%;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 0 16px #ddd;
  border-radius: 16rpx;
  margin: 0 0 3%;
  padding: 3% 3% 0 3%;
}

.topbg .top .title {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #333;
}

.topbg .top .date {
  width: 100%;
  overflow: hidden;
  margin: 3% 0;
}

.topbg .top .date text {
  float: left;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #999;
}

.topbg .top .date rich-text {
  float: left;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #999;
  margin-left: 3%;
}

.topbg .top .man {
  width: 100%;
  overflow: hidden;
}

.topbg .top .man text {
  float: left;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #999;
}

.topbg .top .man rich-text {
  float: left;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #999;
  margin-left: 3%;
}

/* 出行信息 */

.guout {
  width: 94%;
  overflow: hidden;
  background: #fff;
  margin-top: 3%;
  padding: 0 3%;
}

.book {
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 2rpx solid #efefef;
}

.mes {
  font-size: 32rpx;
  color: #333;
  float: left;
}

rich-text {
  font-size: 24rpx;
  color: #999;
  float: right;
}

.trip {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  overflow: hidden;
}

.go {
  font-size: 32rpx;
  color: #bbb;
  float: left;
  width: 220rpx;
}

.choose {
  font-size: 24rpx;
  color: #fff;
  background: #06b3ed;
  float: right;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 11rpx 0;
}

/* 联系人 */

.contact {
  width: 94%;
  overflow: hidden;
  background: #fff;
  margin-top: 3%;
  padding: 0 3%;
}

.li {
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 2rpx solid #efefef;
}

input {
  color: #bbb;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 24rpx;
  float: left;
}

/* 优惠信息（选填） */

.Discount {
  width: 94%;
  overflow: hidden;
  background: #fff;
  margin-top: 3%;
  padding: 0 3%;
}

.choose2 {
  font-size: 24rpx;
  color: #fff;
  background: #06b3ed;
  float: right;
  width: 90rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 11rpx 0;
  border-radius: 8rpx;
}

.choose3 {
  font-size: 26rpx;
  float: right;
  line-height: 88rpx;
  color: #bbb;
}

.ri {
  width: 32rpx;
  height: 32rpx;
  float: right;
  margin: 28rpx 0;
}

/* 提交 */

.commit {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  background: #fff;
  z-index: 99;
}

.Total {
  float: left;
  height: 100rpx;
  line-height: 100rpx;
  width: 60%;
  padding-left: 3%;
}

.Total text {
  color: #f00;
  font-size: 36rpx;
  float: left;
  padding-right: 3%;
}

.Total rich-text {
  font-size: 24rpx;
  color: #999;
  float: left;
}

.submit {
  float: right;
}

.btn {
  width: 248rpx;
  height: 100rpx;
  text-align: center;
  background: #06b3ed;
  color: #fff;
  font-size: 36rpx;
  line-height: 100rpx;
  float: right;
}

.img1 {
  width: 36rpx;
  height: 36rpx;
  margin: 38rpx 0;
  transform: rotate(180deg);
}

.img2 {
  width: 36rpx;
  height: 36rpx;
  float: right;
  margin: 38rpx 0;
}

/* 备注 */

.Remarks {
  width: 94%;
  padding: 0 3%;
