}

.pays {
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  line-height: 100rpx;
}

.one {
  color: #333;
  font-size: 32rpx;
  float: left;
}

.first {
  /* border-bottom: 2rpx solid #efefef; */
}

.two {
  color: #f00;
  font-size: 32rpx;
  float: right;
}

.screen {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.6);
  top: 0;
  left: 0;
  z-index: 9;
