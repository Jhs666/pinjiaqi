page {
  background: #fff;
}

.top {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.banner {
  width: 100%;
  height: 460rpx;
  overflow: hidden;
  position: relative;
}

.meng {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: absolute;
  top: 0;
  left: 0;
}

.slide {
  width: 100%;
  height: 100%;
  display: block;
  margin: 0 auto;
}

.place {
  width: 100%;
  overflow: hidden;
  text-align: center;
  color: #fff;
  position: absolute;
  top: 45%;
}

.tit {
  font-size: 36rpx;
  line-height: 82rpx;
}

.date {
  font-size: 20rpx;
  line-height: 28rpx;
}

.user {
  width: 100%;
  overflow: hidden;
  border-bottom: 2rpx solid #efefef;
  margin-top: -50rpx;
  z-index: 99;
  position: relative;
}

.photo {
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
  margin: 0 auto;
}

.photo image {
  width: 100%;
  height: 100%;
  display: block;
  margin: 0 auto;
}

.name {
  color: #333;
  font-size: 20rpx;
  line-height: 28rpx;
  text-align: center;
  padding: 3% 0 4%;
}

.li {
  float: left;
  width: 25%;
  text-align: center;
}

.kind {
  font-size: 24rpx;
  color: #bbb;
  line-height: 34rpx;
  display: block;
  border-right: 2rpx solid #ddd;
}

.num {
  color: #666;
  font-size: 20rpx;
  line-height: 62rpx;
}

.show {
  width: 94%;
  padding: 0 3% 3%;
  overflow: hidden;
}

.h2 {
  width: 100%;
  overflow: hidden;
  margin: 3% auto;
  text-align: center;
}

.h2 image {
  width: 32rpx;
  height: 32rpx;
}

.title {
  font-size: 36rpx;
  line-height: 50rpx;
  color: #333;
}

.con {
  color: #666;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: justify;
}

.con image {
  width: 100%;
  display: block;
  margin: 2% auto 0;
}

.talk {
  width: 94%;
  height: 56rpx;
  overflow: hidden;
  padding: 3%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  border-top: 2rpx solid #efefef;
}

input {
  width: 620rpx;
  height: 56rpx;
  float: left;
  background: #efeff4;
  color: #999;
  font-size: 28rpx;
  line-height: 56rpx;
  border-radius: 60rpx;
  padding-left: 20rpx;
}

.talk image {
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin: 8rpx 0 8rpx 16rpx;
}

.all {
  width: 94%;
  padding: 3%;
  overflow: hidden;
  border-top: 20rpx solid #f5f5f9;
  border-bottom: 20rpx solid #f5f5f9;
  margin: 0 auto;
}

.huifu {
  color: #333;
  font-size: 32rpx;
  line-height: 44rpx;
}

.head {
  width: 100%;
  margin: 3% 0;
  overflow: hidden;
}

.tu {
  width: 72rpx;
  height: 72rpx;
  overflow: hidden;
  float: left;
  border-radius: 50%;
}

.tu image {
  width: 100%;
  height: 100%;
  display: block;
  margin: 0 auto;
}

.header {
  width: 50%;
  overflow: hidden;
  float: left;
  margin-left: 3%;
}

.ming {
  font-size: 28rpx;
  color: #333;
  line-height: 42rpx;
}

.Grade {
  font-size: 20rpx;
  line-height: 28rpx;
  color: #f6c900;
  border: 2rpx solid rgba(250, 198, 14, 1);
  border-radius: 12rpx;
  padding: 0 10rpx;
}

.time {
  font-size: 20rpx;
  line-height: 30rpx;
  color: #999;
}

.more {
  width: 40rpx;
  height: 8rpx;
  float: right;
  margin: 32rpx 0;
}

.lun {
  width: 88%;
  overflow: hidden;
  float: right;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
  text-align: justify;
}

.dd {
  width: 100%;
  overflow: hidden;
  margin-bottom: 3%;
}

.what {
  padding-bottom: 100rpx;
}
.entry{
  width: 92%;
  height: 60rpx;
  background: #efeff4;
  border-radius: 30rpx;
  float: left;
  overflow: hidden;
}
.entry input {
  width: 72%;
  height: 60rpx;
  color: #bbb;
  font-size: 24rpx;
  line-height: 60rpx;
  float: left;
}
.search_btn{
  width: 15%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #bbb;
  text-align: center;
  float: right;
  border-left: 2rpx solid #ebebec;
  background: #ebebec;
}