.list {
  width: 100%;
  overflow: hidden;
}

.top {
  background: #fff;
  width: 94%;
  overflow: hidden;
  margin-top: 3%;
  padding: 0 3%;
}

.li {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 2rpx solid #efefef;
}

.li text {
  color: #666;
  font-size: 32rpx;
  width: 30%;
  float: left;
}

picker {
  width: 65%;
  float: left;
  font-size: 24rpx;
  color: #888;
  line-height: 88rpx;
}

input {
  width: 65%;
  height: 88rpx;
  font-size: 24rpx;
  color: #bbb;
  line-height: 88rpx;
  float: left;
}

.li image {
  width: 32rpx;
  height: 32rpx;
  float: right;
  margin: 28rpx 0;
}

.text {
  width: 94%;
  overflow: hidden;
  padding: 3% 3% 20%;
  font-size: 24rpx;
  line-height: 44rpx;
  color: #999;
  text-align: justify;
}

/* 保存按钮 */

.btn {
  width: 100%;
  height: 100rpx;
  background: #06b3ed;
  line-height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
}

.btn text {
  color: #fff;
  font-size: 36rpx;
  display: block;
}
