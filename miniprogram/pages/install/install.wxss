/* pages/info/info.wxss */

.center {
  height: 100vh;
  background: #fff;
}

.ul {
  width: 94%;
  margin: 0 auto;
  padding: 3% 3% 0;
}

.li {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #efefef;
}

.li text {
  font-size: 28rpx;
  float: left;
  color: #333;
  /* width: 16%; */
}

.user {
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx 0;
  overflow: hidden;
  border-radius: 50%;
  float: right;
}

.user image {
  width: 100%;
  height: 100%;
  display: block;
  margin: 0 auto;
}

.li input {
  height: 100%;
  float: right;
  color: #999;
  font-size: 24rpx;
  text-align: right;
}

.li .ri {
  width: 18rpx;
  height: 32rpx;
  float: right;
  margin: 34rpx 0;
}

/* 保存按钮 */

.btn {
  width: 100%;
  height: 100rpx;
  background: #06b3ed;
  line-height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
}

.btn .commit {
  color: #fff;
  font-size: 36rpx;
  display: block;
  background: none;
  border-radius: 0;
  width: 100%;
  height: 100%;
  line-height: 100rpx;
}
/* 退出登录 */
.out text{
  color: #ff0000;
}
.out image{
  width: 50rpx;
  height: 46rpx;
  margin: 27rpx 0;
  float: right;
}