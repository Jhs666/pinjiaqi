.top {
  width: 94%;
  height: 100rpx;
  margin: 0 auto;
  padding: 0 3%;
  overflow: hidden;
  background: #06b3ed;
  /* position: fixed; */
}
.top .back {
  width: 40rpx;
  height: 100%;
  float: left;
  margin-right: 1%;
}
.top .back image {
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 30rpx auto;
}
.top .place {
  width: 16%;
  height: 100%;
  overflow: hidden;
  float: left;
}
.top .place image {
  width: 26rpx;
  height: 36rpx;
  margin: 32rpx 0;
  float: left;
  margin-right: 12%;
}
.top .place text {
  font-size: 28rpx;
  color: #fff;
  line-height: 100rpx;
  letter-spacing: 2rpx;
}
.top .search {
  width: 84%;
  height: 60rpx;
  background: #fff;
  border-radius: 30rpx;
  float: left;
  margin: 20rpx 0;
}
.top .search image {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin: 10rpx 0 10rpx 3%;
}
.top .search input {
  height: 60rpx;
  color: #bbb;
  font-size: 24rpx;
  line-height: 60rpx;
}
.swiper-tab {
