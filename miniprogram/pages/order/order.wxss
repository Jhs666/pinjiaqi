/* 分类标签 */
.tag {
  width: 100%;
  margin: 3% auto;
  overflow: hidden;
}
.tag view {
  border: 2rpx solid rgba(6, 179, 237, 1);
  font-size: 28rpx;
  color: #06b3ed;
  line-height: 40rpx;
  float: left;
  border-radius: 60rpx;
  padding: 4rpx 22rpx;
  text-align: center;
  margin-right: 3%;
}
.tag .hot {
  background: #06b3ed;
  color: #fff;
}
.listshow {
  width: 100%;
  height: 296rpx;
  overflow: hidden;
  border-radius: 12rpx;
  position: relative;
  margin-bottom: 3%;
}
.listshow image {
  width: 100%;
  height: 100%;
  display: block;
  margin: 0 auto;
}
.listshow .mask {
  position: absolute;
  width: 100%;
  height: 296rpx;
  background: rgba(0, 0, 0, 0.4);
  top: 0;
  left: 0;
}
.listshow .mask .con {
  position: absolute;
  width: 92%;
  height: 120rpx;
  padding: 0 4%;
  bottom: 0;
  left: 0;
}
.listshow .mask .con .title {
  color: #fff;
  font-size: 36rpx;
  line-height: 50rpx;
}
.listshow .mask .con text {
  font-size: 24rpx;
  color: #fff;
  line-height: 34rpx;
}
/* 优惠券列表 */
.wrapper1 {
  width: 100%;
  margin: 2% auto 0;
  display: flex;
  position: relative;
}
.bg {
  width: 100%;
  height: 100%;
  display: block;
  margin: 0 auto;
}
.content {
  flex: 1;
  width: 60%;
  padding: 4%;
  border-radius: 16rpx 0 0 16rpx;
  position: absolute;
  left: 2%;
  top: 0;
}
.title1 {
  color: #333;
  font-size: 32rpx;
  line-height: 44rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.play_date1 {
  font-size: 20rpx;
  color: #9b9b9b;
  line-height: 28rpx;
}
.date1 {
  font-size: 20rpx;
