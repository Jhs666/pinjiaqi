.show {
  display: block;
}

.hidden {
  display: none;
}

.bbb {
  width: auto;
  float: left;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.tab {
  width: 94%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 3%;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.top {
  width: 94%;
  height: 100rpx;
  margin: 0 auto;
  padding: 0 3%;
  overflow: hidden;
  background: #06b3ed;
}

.top .back {
  width: 40rpx;
  height: 100%;
  float: left;
  margin-right: 1%;
}

.top .back image {
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 30rpx auto;
}

.top .place {
  width: 16%;
  height: 100%;
  overflow: hidden;
  float: left;
}

.top .place image {
  width: 26rpx;
  height: 36rpx;
  margin: 32rpx 0;
  float: left;
  margin-right: 12%;
}

.top .place text {
  font-size: 28rpx;
  color: #fff;
  line-height: 100rpx;
  letter-spacing: 2rpx;
}

.top .search {
  width: 84%;
  height: 60rpx;
  background: #fff;
  border-radius: 30rpx;
  float: left;
  margin: 20rpx 0;
}

.top .search image {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin: 10rpx 0 10rpx 3%;
}

.top .search input {
  height: 60rpx;
  color: #bbb;
  font-size: 24rpx;
  line-height: 60rpx;
}

.swiper-tab {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.active {
  color: #333;
  border-bottom: 6rpx solid #06b3ed;
}

swiper {
  width: 94%;
  height: 100%;
  overflow: hidden;
  margin: 0 auto;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 分类标签 */

.types {
  width: 100%;
  height: 90rpx;
  overflow: hidden;
  white-space: nowrap;
}

.tag {
  width: auto;
  height: 100%;
  margin: 3% auto;
  overflow: hidden;
  display: inline-block;
  margin-right: 3%;
}

.tag .li {
  width: auto;
  height: 40rpx;
  border: 2rpx solid rgba(6, 179, 237, 1);
  font-size: 28rpx;
  color: #06b3ed;
  line-height: 40rpx;
  border-radius: 60rpx;
  padding: 4rpx 22rpx;
  /* text-align: center; */
}

.tag .hot {
  background: #06b3ed;
  color: #fff;
}

.listshow {
  width: 100%;
  height: 296rpx;
  overflow: hidden;
  border-radius: 12rpx;
  position: relative;
  margin-bottom: 3%;
}

.listshow image {
  width: 100%;
  /* height: 100%; */
  display: block;
  margin: 0 auto;
}

.listshow .mask {
  position: absolute;
  width: 100%;
  height: 296rpx;
  background: rgba(0, 0, 0, 0.4);
  top: 0;
  left: 0;
}

.listshow .mask .con {
  position: absolute;
  width: 92%;
  height: 120rpx;
  padding: 0 4%;
  bottom: 0;
  left: 0;
}

.listshow .mask .con .title {
  color: #fff;
  font-size: 36rpx;
  line-height: 66rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.listshow .mask .con text {
  font-size: 24rpx;
  color: #fff;
  line-height: 34rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.btn {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  box-shadow: 0 0 20rpx #ddd;
  position: fixed;
  right: 3%;
