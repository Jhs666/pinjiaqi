.list {
  width: 94%;
  overflow: hidden;
  padding: 0 3%;
}

.content {
  margin: 3% 20rpx 0;
  text-align: justify;
}

.item {
  background-color: #fff;
  margin: 1%;
  margin-bottom: 20rpx;
  display: inline-block;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 0 20rpx #ddd;
  padding: 0 0 4%;
}

.item-ava {
  width: 44rpx;
  height: 44rpx;
  border-radius: 20rpx;
  flex: 0 0 40rpx;
  float: left;
}

.heart {
  width: 24rpx;
  height: 22rpx;
  float: right;
}

.heart_ {
  float: right;
  text-align: center;
}

.item-img {
  width: 100%;
}

.item-title {
  font-size: 24rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #333;
  margin: 15rpx;
  line-height: 34rpx;
}

.item .name {
  width: 96%;
  overflow: hidden;
  /* display: flex; */
  padding: 0 2%;
  align-items: center;
  font-size: 22rpx;
  color: #333;
}

.time {
  font-size: 18rpx;
  color: #bbb !important;
  float: left !important;
  margin-left: 18rpx;
}

.item-title-box {
  display: flex;
  position: relative;
}

.name-title {
  margin-left: 18rpx;
  /* float: left; */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 20rpx;
}

.name text:last-child {
  color: #c4c4c4;
  /* float: right; */
}

.left, .right {
  display: inline-block;
  vertical-align: top;
  width: 49%;
}

.right {
  float: right;
}

.donghua {
  float: left;
}
