.top {
  width: 94%;
  height: 100rpx;
  margin: 0 auto;
  padding: 0 3%;
  overflow: hidden;
  background: #06b3ed;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

.top .back {
  width: 40rpx;
  height: 100%;
  float: left;
  margin-right: 1%;
}

.top .back image {
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 30rpx auto;
}

.top .place {
  width: 16%;
  height: 100%;
  overflow: hidden;
  float: left;
}

.top .place image {
  width: 26rpx;
  height: 36rpx;
  margin: 32rpx 0;
  float: left;
  margin-right: 12%;
}

.top .place text {
  font-size: 28rpx;
  color: #fff;
  line-height: 100rpx;
  letter-spacing: 2rpx;
}

.top .search {
  width: 84%;
  height: 60rpx;
  background: #fff;
  border-radius: 30rpx;
  float: left;
  margin: 20rpx 0;
}

.top .search image {
  width:7%;
  height: 40rpx;
  float: left;
  margin: 10rpx 0 10rpx 3%;
}

.top .search input {
  width: 72%;
  height: 60rpx;
  color: #bbb;
  font-size: 24rpx;
  line-height: 60rpx;
  float: left;
}
.search_btn{
  width: 15%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #bbb;
  text-align: center;
  float: right;
  border-left: 2rpx solid #efefef;
}

/* 筛选 */
.shai {
  width: 94%;
  height: auto;
  margin: 0 auto;
  background: #fff;
  padding: 0 3%;
  margin-bottom: 3%;
  white-space: nowrap;
  margin-top: 100rpx;
}

.shai .list {
  /* float: left; */
  display: inline-block;
}

.shai .list .li {
  float: left;
  width: 120rpx;
  height: 48rpx;
  background: #f5f5f9;
  border-radius: 12rpx;
  font-size: 24rpx;
  line-height: 48rpx;
  text-align: center;
  margin: 20rpx 10rpx;
  color: #666;
}

.shai .btn image {
  width: 36rpx;
  height: 40rpx;
  float: right;
  margin: 24rpx 0;
}

.shai .btn text {
  font-size: 24rpx;
  color: #666;
  float: right;
  line-height: 88rpx;
  margin-right: 2%;
}
.animation{
  z-index: 99999;
  float: left;
  right: -100vh;
  width: 100%;
  height: 100%;
  top: 0;
}
.animation-content{
  width: 70%;
  height: 100%;
  background: #fff;
  position: absolute;
  right: 0;
  z-index: 999999;
  padding: 3%;
}
.pztitle{
  font-size: 30rpx;
  color: #333;
}
.inputzone{
  width: 100%;
  overflow: hidden;
  margin-top: 3%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.inputzone input{
  width:42%;
  font-size: 28rpx;
  text-align: center;
  background: #efefef;
  border-radius: 10rpx;
}
.sign{
  width:6%;
  color: #ddd;
  display: block;
  text-align: center;
  margin: 0 auto;
}
.end{
  margin-top: 5%;
}
.end input{
  font-size: 28rpx;
  padding: 0 2%;
  background: #efefef;
  border-radius: 10rpx;
  margin-top: 3%;
}
.bottom{
  width: 94%;
  height: 90rpx;
  position: absolute;
  bottom: 5%;
  right: 3%;
}
.left_btn{
  width: 180rpx;
  height: 70rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(to right, #7bdbfb, #06b3ed);
  border-radius: 60rpx 0rpx 0rpx 60rpx;
  float: right;
  font-size: 28rpx;
  line-height: 70rpx;
  margin: 10rpx 0;
}
.right_btn{
  width: 180rpx;
  height: 70rpx;
  text-align: center;
  color: #fff;
  background: #317bff;
  border-radius: 0rpx 60rpx 60rpx 00rpx;
  float: right;
  font-size: 28rpx;
  line-height: 70rpx;
  margin: 10rpx 0;
}
button::after{
  border: none;
}

/* 列表 */

.list_show {
  width: 94%;
  margin: 0 auto;
}

.list_show .li {
  width: 100%;
  height: 230rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-bottom: 3%;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 0 16px #ddd;
}

.list_show .li .img {
  width: 40%;
  height: 100%;
  float: left;
  position: relative;
}

.list_show .li .img image {
  width: 100%;
  height: 230rpx;
  display: block;
  margin: 0 auto;
}

.list_show .li .tag {
  width: 86rpx;
  height: 34rpx;
  line-height: 34rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: #43eff9;
  color: #000;
  text-align: center;
  font-size: 20rpx;
}

.list_show .li .title {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 20rpx;
}

.list_show .li .con {
  float: left;
  width: 54%;
  height: 200rpx;
  position: relative;
  padding: 2% 3%;
}

.list_show .li .con .desc {
  color: #000;
  font-size: 28rpx;
  line-height: 40rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.list_show .li .con .num {
  position: absolute;
  bottom: 5%;
  left: 3%;
  color: #9b9b9b;
  font-size: 24rpx;
}

.list_show .li .con .qian {
  position: absolute;
  bottom: 5%;
  right: 3%;
  color: #ff001f;
  font-size: 32rpx;
  font-weight: bolder;
}
.left {
  width: 86%;
  height: 88rpx;
  overflow-x: scroll;
  float: left;
}
.btn {
  width: 14%;
