.top {
  width: 94%;
  height: 100rpx;
  margin: 0 auto;
  padding: 0 3%;
  overflow: hidden;
  background: #06b3ed;
  /* position: fixed; */
}

.top .back {
  width: 40rpx;
  height: 100%;
  float: left;
  margin-right: 1%;
}

.top .back image {
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 30rpx auto;
}

.top .place {
  width: 16%;
  height: 100%;
  overflow: hidden;
  float: left;
}

.top .place image {
  width: 26rpx;
  height: 36rpx;
  margin: 32rpx 0;
  float: left;
  margin-right: 12%;
}

.top .place text {
  font-size: 28rpx;
  color: #fff;
  line-height: 100rpx;
  letter-spacing: 2rpx;
}

.top .search {
  width: 84%;
  height: 60rpx;
  background: #fff;
  border-radius: 30rpx;
  float: left;
  margin: 20rpx 0;
}

.top .search image {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin: 10rpx 0 10rpx 3%;
}

.top .search input {
  height: 60rpx;
  color: #bbb;
  font-size: 24rpx;
  line-height: 60rpx;
}

/* 筛选 */

.shai {
  width: 94%;
  height: 88rpx;
  margin: 0 auto;
  background: #fff;
  padding: 0 3%;
  margin-bottom: 3%;
}

.shai .list {
  float: left;
}

.shai .list .li {
  float: left;
  width: 120rpx;
  height: 48rpx;
  color: #333;
  background: #f5f5f9;
  border-radius: 12rpx;
  font-size: 24rpx;
  line-height: 48rpx;
  text-align: center;
  margin: 20rpx 10rpx;
}

.shai .btn image {
  width: 36rpx;
  height: 40rpx;
  float: right;
  margin: 24rpx 0;
}

.shai .btn text {
  font-size: 24rpx;
  color: #666;
  float: right;
  line-height: 88rpx;
  margin-right: 2%;
}

/* 列表 */

.list_show {
  width: 94%;
  margin: 0 auto;
}

.list_show .li {
  width: 100%;
  height: 230rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-bottom: 3%;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 0 16px #ddd;
}

.list_show .li .img {
  width: 40%;
  height: 100%;
  float: left;
  position: relative;
}

.list_show .li .img image {
  width: 100%;
  height: 230rpx;
  display: block;
  margin: 0 auto;
}

.list_show .li .tag {
  width: 86rpx;
  height: 34rpx;
  line-height: 34rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: #43eff9;
  color: #000;
  text-align: center;
  font-size: 20rpx;
}

.list_show .li .title {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 20rpx;
}

.list_show .li .con {
  float: left;
  width: 54%;
  height: 200rpx;
  position: relative;
  padding: 2% 3%;
}

.list_show .li .con .desc {
  color: #000;
  font-size: 28rpx;
  line-height: 40rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.aa {
  width: auto;
  overflow: hidden;
  position: absolute;
  right: 5%;
  bottom: 7%;
}

.list_show .li .con .num {
  color: #9b9b9b;
  font-size: 20rpx;
  float: left;
}

.list_show .li .con .qian {
  color: #ff001f;
  font-size: 32rpx;
  font-weight: bolder;
  float: right;
}

.fenshu {
  width: 100%;
  overflow: hidden;
}

.fenshu text {
  border: 2rpx solid rgba(49, 123, 255, 1);
  font-size: 20rpx;
  color: #317bff;
  padding: 0 6rpx;
}

.quota {
  margin-left: 20rpx;
}

.time {
  font-size: 28rpx;
  color: #f7361f;
}

.bb {
  width: 100%;
  overflow: hidden;
  margin: 6rpx 0;
}

.cc {
  font-size: 28rpx;
  color: #9b9b9b;
  float: left;
  line-height: 42rpx;
}
.left {
  width: 86%;
  height: 88rpx;
  overflow-x: scroll;
  float: left;
}
.active {
  background: #06b3ed !important;
  color: #fff !important;
}