page {
  background-color: #fff;
}

/* 顶部搜索 */

.search {
  width: 94%;
  margin: 0 auto;
  padding: 3% 3%;
  overflow: hidden;
  border-bottom: 1px solid #efefef;
}

.search .left {
  width: 84%;
  height: 60rpx;
  background: #f0f0f0;
  float: left;
  padding: 0 2%;
  border-radius: 30rpx;
}

.search .left image {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin: 10rpx 5rpx 10rpx 0;
}

.search .left input {
  height: 60rpx;
  color: #9b9b9b;
  font-size: 24rpx;
  line-height: 34rpx;
}

.search text {
  font-size: 32rpx;
  color: #000;
  line-height: 60rpx;
  float: right;
}

/* 推荐目的地 */

.intent {
  width: 94%;
  margin: 0 auto;
  padding: 5% 3% 0;
  overflow: hidden;
}

.intent text {
  float: left;
  font-size: 24rpx;
  color: #bbb;
  line-height: 34rpx;
}

.intent image {
  width: 36rpx;
  height: 20rpx;
  float: right;
  margin: 7rpx 0;
}

.intent rich-text {
  float: right;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #06b3ed;
  margin-left: 12rpx;
}

.intent .img {
  width: 22rpx;
  height: 30rpx;
}

.intent .tag {
  width: 100%;
  overflow: hidden;
}

.intent .tag text {
  width: auto;
  padding: 10rpx 26rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333;
  float: left;
  white-space: nowrap;
  margin: 3% 3% 1% 0;
  text-align: center;
  background: #f0f0f0;
}
