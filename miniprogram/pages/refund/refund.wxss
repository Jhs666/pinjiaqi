.line {
  width: 94%;
  height: 20rpx;
  background: #d8d8d8;
  border-radius: 20rpx;
  margin: 3% auto 0;
}

.bg {
  width: 88%;
  background: #fff;
  margin: 0 auto;
  padding: 3% 2%;
  margin-top: -6rpx;
  box-shadow: 0 0 8rpx #ccc;
}

.top {
  width: 100%;
  overflow: hidden;
  border-bottom: 2rpx solid #efefef;
  padding-bottom: 3%;
}

.zhuti {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333;
  text-align: justify;
}

.date {
  font-size: 24rpx;
  line-height: 34rpx;
  color: #999;
  margin: 2% 0 0;
}

.speed {
  width: 100%;
  overflow: hidden;
}

.of {
  width: 100%;
  overflow: hidden;
  margin-top: 2%;
}

.ser {
  font-size: 28rpx;
  color: #999;
  line-height: 40rpx;
  float: left;
}

.success {
  color: #333;
  margin-left: 20rpx;
}

.kefu {
  float: right;
  width: 130rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.kefu button{
  padding: 0;
  margin: 0;
  background: #06b3ed;
  border-radius: 30rpx;
  color: #fff;
  text-align: center;
  font-size: 24rpx;
  line-height: 40rpx;
}
.button-hover {
  color:none;
  background-color:none;
}
.zong {
  font-size: 28rpx;
  color: #999;
  line-height: 40rpx;
  margin-top: 2%;
}

.money {
  color: #06b3ed;
  margin-left: 20rpx;
}

.pint {
  width: 100%;
  margin: 0 auto;
  background: #fff;
  position: relative;
}

.solid {
  position: absolute;
  top: 40rpx;
  left: 22rpx;
  width: 5rpx;
  height: 440rpx;
  background: #06b3ed;
}

.xuhao {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  z-index: 9;
  font-size: 9pt;
  background: #06b3ed;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  margin-left: 5rpx;
}

.xuhao text {
  font-size: 24rpx;
  color: #fff;
}

.content {
  width: 100%;
}

.content-item {
  padding-left: 80rpx;
  padding: 20rpx 0 20rpx 38rpx;
  font-size: 28rpx;
  color: #333;
}

.chuli {
  margin-left: 80rpx;
  color: #999;
}

.chuli .wanbi {
  padding-bottom: 26rpx;
  color: #bbb;
  font-size: 24rpx;
}

.con {
  font-size: 24rpx;
  color: #bbb;
  text-align: justify;
  line-height: 34rpx;
}

.time {
  color: #bbb;
  font-size: 24rpx;
  margin-left: 3%;
}

/* 公共flex */
.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.flex-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-flex-direction: row;
  flex-direction: row;
}

.flex-col {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-flex-direction: column;
  flex-direction: column;
}

.flex-grow-0 {
  min-width: 0;
  -webkit-box-flex: 0;
  -webkit-flex-grow: 0;
  -ms-flex-positive: 0;
  flex-grow: 0;
  -webkit-flex-shrink: 0;
  -ms-flex-negative: 0;
  flex-shrink: 0;
}

.flex-grow-1 {
  min-width: 0;
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
  -ms-flex-positive: 1;
  flex-grow: 1;
  -webkit-flex-shrink: 1;
  -ms-flex-negative: 1;
  flex-shrink: 1;
}

.flex-x-center {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
}

.flex-y-center {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  -ms-grid-row-align: center;
  align-items: center;
}
