.banner {
  position: relative;
}

.bar {
  width: 100%;
  height: auto;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999;
}

.top_title {
  font-size: 36rpx;
  text-align: center;
  color: #fff;
  line-height: 42px;
}

.page_img {
  width: 100%;
  height: 100%;
  display: block;
  margin: 0 auto;
}
.topnavAbsolute {
  position: absolute;
  width: 100%;
  height: auto;
  overflow: hidden;
  top: 21%;
  left: 0;
  transition: all 0.5s ease-out;
}

.topnavFixed {
  position: fixed;
  width: 100%;
  height: auto;
  overflow: hidden;
  left: 0;
  transition: all 0.5s ease-out;
  z-index: 999;
}

.time_axis {
  width: 100%;
  height: auto;
  white-space: nowrap;
  overflow-x: scroll;
  padding: 1% 0;
}

.list {
  width: 20%;
  height: 100rpx;
  display: inline-block;
}

.li {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.1);
  font-size: 24rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.6);
}

.name {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  display: block;
}

.status {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  display: block;
}

.active {
  color: #fff !important;
  font-size: 30rpx !important;
}

.Count_down {
  color: #fff;
  margin: 3% auto;
  text-align: center;
}

.text {
  font-size: 28rpx;
  margin-right: 3%;
}

.num {
  font-size: 28rpx;
  font-weight: bold;
  background-color: #ffcfcb;
  padding: 4rpx 7rpx;
  border-radius: 3rpx;
  color: #e52f2c;
}

.list_show {
  width: 94%;
  margin: 0 auto;
  position: absolute;
  top: 32%;
  left: 3%;
  z-index: 9;
}

.list_show .li {
  width: 100%;
  height: 230rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-bottom: 3%;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 0 10px #f33d05;
  position: relative;
}

.list_show .li .img {
  width: 40%;
  height: 100%;
  float: left;
  position: relative;
}

.list_show .li .img image {
  width: 100%;
  height: 230rpx;
  display: block;
  margin: 0 auto;
}

.list_show .li .tag {
  width: 120rpx;
  height: 34rpx;
  line-height: 34rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: #43eff9;
  color: #000;
  text-align: center;
  font-size: 20rpx;
}

.list_show .li .title {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 20rpx;
}

.list_show .li .con {
  float: left;
  width: 54%;
  height: 200rpx;
  position: relative;
  padding: 2% 3%;
}

.list_show .li .con .desc {
  color: #000;
  font-size: 28rpx;
  line-height: 46rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-align: left;
}

.aa {
  width: 100%;
  overflow: hidden;
  margin-top: 5%;
}

.Original {
  color: #ff001f;
  font-size: 30rpx;
  float: left;
  display: block;
}

.qian {
  color: #999;
  font-size: 24rpx;
  float: left;
  text-decoration: line-through;
  display: block;
  margin: 2% 0 0 2%;
}

.btn {
  font-size: 23rpx;
  color: #fff;
  border: 2rpx solid #ee4a5d;
  border-radius: 60rpx;
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  float: right;
  padding: 0 5%;
  background: linear-gradient(to right, #ff001f, #ee4a5d);
}

.quota {
  margin-left: 20rpx;
}

.bb {
  width: 60%;
  overflow: hidden;
  margin: 5% 0 3%;
  border-radius: 50rpx;
  float: left;
}

.success {
  color: #f00;
  text-align: left;
  float: right;
  margin: 2% 0 3%;
}

.success text {
  color: #f00;
}

.marks {
  width: 24%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: absolute;
  left: 0;
  top: 0;
}

.arrow {
  width: 24rpx;
  height: 24rpx;
  overflow: hidden;
  position: fixed;
  left: 3%;
  z-index: 9999;
  border-left: 4rpx solid #fff;
  border-top: 4rpx solid #fff;
  transform: rotate(-45deg);
}

.arrow_two {
  width: 24rpx;
  height: 24rpx;
  overflow: hidden;
  position: fixed;
  left: 3%;
  z-index: 99999;
  transform: rotate(-45deg);
}
