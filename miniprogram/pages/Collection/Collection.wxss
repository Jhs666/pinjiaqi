.show {
  margin-top: 2%;
  display: block;
}
.hidden {
  display: none;
}
.swiper-tab {
  width: 100%;
  height: 88rpx;
  overflow: hidden;
  line-height: 82rpx;
  background: #fff;
}
.tab {
  width: 100%;
  margin: 0 auto;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.bbb {
  width: 26%;
  margin: 0 12%;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}
.active {
  color: #06b3ed;
  border-bottom: 6rpx solid #06b3ed;
}


/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 列表 */
.list_show {
  width: 94%;
  margin: 0 auto;
}

.list_show .li {
  width: 100%;
  height: 230rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-bottom: 3%;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 0 16px #ddd;
}
.item{
  width: 100%;
  overflow: hidden;
}

.list_show .li .img {
  width: 40%;
  height: 100%;
  float: left;
  position: relative;
}

.list_show .li .img image {
  width: 100%;
  height: 230rpx;
  display: block;
  margin: 0 auto;
}

.list_show .li .tag {
  width: 86rpx;
  height: 34rpx;
  line-height: 34rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: #43eff9;
  color: #000;
  text-align: center;
  font-size: 20rpx;
}

.list_show .li .title {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 20rpx;
}

.list_show .li .con {
  float: left;
  width: 54%;
  height: 200rpx;
  position: relative;
  padding: 2% 3%;
}

.list_show .li .con .desc {
  color: #000;
  font-size: 28rpx;
  line-height: 40rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.list_show .li .con .num {
  position: absolute;
  bottom: 5%;
  left: 3%;
  color: #9b9b9b;
  font-size: 24rpx;
}

.list_show .li .con .qian {
  position: absolute;
  bottom: 5%;
  right: 3%;
  color: #ff001f;
  font-size: 32rpx;
  font-weight: bolder;
}

.no {
  color: #999;
  font-size: 24rpx;
  line-height: 34rpx;
  margin: 5% auto;
  text-align: center;
}

.date {
  color: #999;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  margin-bottom: 3%;
}
.kong {
  width: 100%;
  height: auto;
  margin: 0 auto;
  text-align: center;
}
.kong image {
  width: 200rpx;
  height: 220rpx;
  display: block;
  margin: 40% auto 0;
}
.kong text {
  color: #999;
  font-size: 28rpx;
  line-height: 40rpx;
  display: block;
  margin-top: 8%;
}