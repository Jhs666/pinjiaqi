
/* 顶部搜索 */
/* 充值时间段 */
.banner{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  float: left;
  padding-bottom: 30rpx;
}
.tit_box{
  width: 92%;
  height: 90rpx;
  border-bottom: 1rpx solid rgb(221, 221, 221);
  margin-left: 4%;
  margin-right: 4%;
}
.tit{
  color: #333;
  font-size: 30rpx;
  line-height:  90rpx;
}
.box{
  display: inline-block;
  margin-left: 15rpx;
}
.time_bet{
  width: 33.3%;
  text-align: center;
  display: inline-block;
  margin: 0 auto;
}
.arr{
  text-align: center;
  display: inline-block;
  width: 200rpx;
  height: 70rpx;
  color: #555;
  font-size: 26rpx;
  line-height:  70rpx;
  margin-top: 30rpx;
  border: 1rpx solid rgb(221, 221, 221);
  background: #fff;
  border-radius: 10rpx;
  margin-left: 15rpx;
}
.btn_times{
  display: inline-block;
  width: 200rpx;
  height: 70rpx;
  /* color: #1c9fe3; */
  font-size: 26rpx;
  line-height:  70rpx;
  margin-top: 30rpx;
  /* border: 1rpx solid #1c9fe3;
  background: rgb(210, 234, 247); */
  border-radius: 10rpx;
  margin-left: 34rpx;
}
.search{
    width: 94%;
    margin: 0 auto;
    padding: 3% 3%;
    overflow: hidden;
    background: #fff;
}
.search .left{
    width: 84%;
    height: 60rpx;
    background: #F0F0F0;
    float: left;
    padding:0 2%;
    border-radius: 30rpx;
}
.search .left image{
    width: 40rpx;
    height: 40rpx;
    float: left;
    margin:10rpx 5rpx 10rpx 0;
}
.search .left input{
    height: 60rpx;
    color: #9B9B9B;
    font-size: 24rpx;
    line-height: 34rpx;
}
.search text{
    font-size: 28rpx;
    color: #999;
    line-height:60rpx;
    float: right;
}
/* 列表 */
.list{
    width: 94%;
    margin: 0 auto;
    padding: 2% 3% 0;
    background: #fff;
    margin-top: 3%;
}
.list text{
    font-size: 32rpx;
    line-height: 44rpx;
    color: #666;
    display: block;
    margin-bottom: 2%;
}
.all{
    font-size: 32rpx;
    line-height: 44rpx;
    color: #666;
}
.li{
    width: 100%;
    overflow: hidden;
    border-bottom: 2rpx solid #efefef;
    padding: 3% 0;
}
.user{
    width: 88rpx;
    height: 88rpx;
    overflow: hidden;
    background: #D8D8D8;
    border-radius: 50%;
    float: left;
}
.user image{
    width: 100%;
    height: 100%;
    display: block;
    margin: 0 auto;
}
.mes{
    width: auto;
    float: left;
    margin-left: 3%;
}
.name{
    font-size: 32rpx;
    line-height: 44rpx;
    color: #666;
}
.tel{
    font-size: 28rpx;
    line-height: 40rpx;
    color: #999;
}
.more{
    color: #999;
    font-size: 24rpx;
    line-height: 34rpx;
    text-align: center;
    margin: 2% 0;
}