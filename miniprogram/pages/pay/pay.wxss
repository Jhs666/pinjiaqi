.youhui{
    width: 94%;
    height: 760rpx;
    margin: 3% auto 0;
    overflow: hidden;
    position: relative;
}
.bg{
    width: 100%;
    height: 760rpx;
    display: block;
    margin: 0 auto;
}
.youhui .content{
    width: 92%;
    overflow: hidden;
    position: absolute;
    top: 5%;
    left: 4%;
}
.bottom_line{
    width: 90%;
    height: 4rpx;
    border-top: 4rpx dashed #eee;
    position: absolute;
    left: 5%;
    top: 39%;
}
.youhui .content .title{
    font-size: 32rpx;
    line-height: 44rpx;
    color: #333;
    text-align: justify;
}
.youhui .content .success{
    font-size: 24rpx;
    line-height: 40rpx;
    color: #999;
}
.youhui .content .money text{
    color: #999;
    font-size: 24rpx;
    line-height: 52rpx;
    float: left;
}
.youhui .content .money rich-text{
    color: #ff0000;
    font-size: 36rpx;
    line-height: 50rpx;
    float: left;
}
.youhui .shiyong{
    width: 92%;
    height: auto;
    overflow: hidden;
    position: absolute;
    left: 4%;
    bottom: 3%;
}
.youhui .shiyong .select{
    color: #333;
    font-size: 28rpx;
    line-height: 40rpx;
}
.youhui .shiyong .li{
    width: 100%;
    height: 86rpx;
    line-height: 85rpx;
    overflow: hidden;
}
.youhui .shiyong .li .icon{
    width: 7%;
    float: left;
}
.youhui .shiyong .li .icon image{
    width: 44rpx;
    height: 44rpx;
    float: left;
    margin: 21rpx 0;
}
.youhui .shiyong .li .line{
    float: left;
    width: 86%;
    margin-left: 3%;
    border-bottom: 2rpx solid #efefef;
}
.youhui .shiyong .li .line text{
    color: #333;
    font-size: 28rpx;
    line-height: 40rpx;
}
.youhui .shiyong .li .ri{
    width: 4%;
    float: right;
}
.youhui .shiyong .li .ri image{
    width: 32rpx;
    height: 32rpx;
}