.banner {
  width: 100%;
  overflow: hidden;
}

.banner image {
  width: 100%;
  display: block;
}

.show {
  width: 94%;
  padding: 0 3% 10%;
}

.title {
  font-size: 48rpx;
  color: #000;
  line-height: 66rpx;
  font-weight: bolder;
  margin: 3% 0;
}

.show text {
  color: #333;
  font-size: 36rpx;
  line-height: 50rpx;
}

.line {
  width: 70rpx;
  height: 6rpx;
  background: #fac60e;
  margin-left: 5%;
}

.con {
  width: 94%;
  overflow: hidden;
  background: rgba(6, 179, 237, 0.20);
  padding: 3%;
  color: #666;
  line-height: 40rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  text-align: justify;
  margin: 3% 0;
}

.tit {
  width: 100%;
  overflow: hidden;
}

.tit image {
  width: 30rpx;
  height: 34rpx;
  float: left;
  margin: 10rpx 0;
}

.tits {
  font-size: 36rpx;
  line-height: 50rpx;
  color: #333;
  margin-left: 6rpx;
}

.li {
  margin-top: 3%;
}

.dl {
  color: #333;
  font-size: 28rpx;
  line-height: 50rpx;
}

.dl text {
  color: #333;
  font-size: 28rpx;
  line-height: 50rpx;
}

.desc {
  width: 100%;
  overflow: hidden;
}

.desc image {
  width: 32rpx;
  height: 32rpx;
  display: block;
  margin: 3% auto;
}

.desc text {
  font-size: 36rpx;
  line-height: 50rpx;
  color: #333;
  display: block;
  text-align: center;
}

.item {
  color: #666;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: justify;
  margin: 3% 0 2%;
}

.list {
  width: 100%;
  margin-bottom: 2%;
}

.orders {
  width: 100%;
  height: 230rpx;
  overflow: hidden;
  margin: 0 auto;
  box-shadow: 0 0 32rpx #ddd;
  border-radius: 12rpx;
}

.list .img {
  width: 40%;
  height: 100%;
  float: left;
  position: relative;
}

.list .img image {
  width: 100%;
  height: 230rpx;
  display: block;
  margin: 0 auto;
}

.list .tag {
  width: 86rpx;
  height: 34rpx;
  line-height: 34rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  text-align: center;
  font-size: 20rpx;
}

.list .cons {
  float: left;
  width: 54%;
  height: 200rpx;
  position: relative;
  padding: 2% 3%;
}

.list .cons .desc {
  color: #000;
  font-size: 28rpx;
  line-height: 40rpx;
}

.list .cons .fenshu {
  position: absolute;
  font-size: 24rpx;
  color: #333;
  left: 3%;
  bottom: 24%;
}

.list .cons .num {
  position: absolute;
  bottom: 5%;
  right: 3%;
  color: #fffb;
  font-size: 20rpx;
  background: #06b3ed;
  width: 100rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
}

.list .cons .qian {
  position: absolute;
  bottom: 5%;
  left: 3%;
  color: #ff001f;
  font-size: 32rpx;
  font-weight: bolder;
}
.content_desc{
  width: 100%;
  display: block;
  margin: 0 auto;
}